{
  "name": "kaji-opencode-relay",
  "version": "0.3.4",
  "description": "Universal relay for OpenCode â€” route AI coding sessions to any channel",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".":         { "types": "./dist/index.d.ts",          "default": "./dist/src/index.js" },
    "./types":   { "types": "./dist/types.d.ts",           "default": "./dist/src/types.js" },
    "./adapter": { "types": "./dist/adapter.d.ts",         "default": "./dist/src/adapter.js" },
    "./store":   { "types": "./dist/store.d.ts",           "default": "./dist/src/store.js" },
    "./schemas": { "types": "./dist/schemas.d.ts",         "default": "./dist/src/schemas.js" },
    "./debug":   { "types": "./dist/debug/adapter.d.ts",   "default": "./dist/src/debug/adapter.js" },
    "./render":  { "types": "./dist/render.d.ts",          "default": "./dist/src/render.js" }
  },
  "bin": {
    "kaji-opencode-relay-debug": "./bin/debug.ts"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts src/types.ts src/adapter.ts src/store.ts src/render.ts src/schemas.ts src/debug/adapter.ts src/debug/cli.ts src/debug/renderer.ts --outdir dist --format esm --target node --external @opencode-ai/sdk --external zod --splitting && tsc -p tsconfig.build.json && bun scripts/fix-duplicate-exports.js",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "@opencode-ai/sdk": "^1.2.5"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@opencode-ai/sdk": "^1.2.5",
    "bun-types": "latest",
    "typescript": "^5.4.5"
  }
}
